########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	megaphone.cpp	\

SRCS_D		:=	src/

OBJS_D		:=	objs/

OBJS		=	$(SRCS:%.cpp=${OBJ_D}%.o)

HEAD		:=	#

HEAD_D		:=	.

CFLAGS		:=	c++ -Wall -Wextra -Werror #-std=c++98

BIN			:=	megaphone

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	$(BIN)

$(BIN)		:	$(OBJS_D) $(OBJS)
				$(CFLAGS) -o $(BIN) $(OBJS)

$(OBJS)	:	$(OBJ_D)%.o: $(SRCS_D)%.cpp Makefile
				$(CFLAGS) -c $< -o $@

$(OBJS_D)	:
				@mkdir -p $(OBJS_D)
########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				$(RM) -r $(OBJS) $(OBJS_D)

fclean		:	clean
				$(RM) $(BIN)

re			:	fclean all

.PHONY: all bonus clean fclean re
