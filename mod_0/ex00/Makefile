########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################
SRC		:=	megaphone.cpp

OBJ		:=	$(SRC:%.c=%.o)

CFLAGS		:=	c++ -Wall -Wextra -Werror

BIN			:=	megaphone

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################
$(BIN)		:	$(OBJ)
				$(CFLAGS) -o $(BIN) $(OBJ)

$(OBJ)	:	%.o: %.c
				$(CFLAGS) -c $< -o $@

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################
all			:	$(BIN)

clean		:
				$(RM) -r $(OBJ)

fclean		:	clean
				$(RM) $(BIN)

re			:	fclean all

.PHONY: all clean fclean re
