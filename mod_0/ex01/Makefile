########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	PhoneBook.cpp	\
				search.cpp		\
				add.cpp			\

SRCS_D		:=	src/

OBJ_D		:=	objs/

OBJS		=	$(SRCS:%.cpp=$(OBJ_D)%.o)

HEAD		:=	PhoneBook.hpp	\
				contact.hpp	\

HEAD_D		:=	includes

CFLAGS		:=	c++ -Wall -Wextra -Werror #-std=c++98

BIN			:=	friends

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	$(BIN)

$(BIN)		:	$(OBJ_D) $(OBJS) $(HEAD)
				$(CFLAGS) -o $(BIN) $(OBJS)

$(OBJS)	:	$(OBJ_D)%.o: $(SRCS_D)%.cpp $(HEAD) Makefile
				$(CFLAGS) -c $< -o $@

$(OBJ_D)	:
				@mkdir -p $(OBJ_D)
########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				$(RM) -r $(OBJS) $(OBJ_D)

fclean		:	clean
				$(RM) $(BIN)

re			:	fclean all

.PHONY: all bonus clean fclean re
